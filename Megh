<body>

<div class="container">
    <h2>Generator Efficiency</h2>

    <label>Terminal Voltage (V)</label>
    <input type="number" id="V">

    <label>No Load Current (Iâ‚€)</label>
    <input type="number" id="I0">

    <label>Shunt Field Current (Ish)</label>
    <input type="number" id="Ish">

    <label>Input Current (I)</label>
    <input type="number" id="I">

    <button onclick="calculate()">Calculate</button>

    <div class="output" id="result"></div>
</div>

<script>
function calculate() {
    const V = parseFloat(document.getElementById("V").value);
    const I0 = parseFloat(document.getElementById("I0").value);
    const Ish = parseFloat(document.getElementById("Ish").value);
    const I = parseFloat(document.getElementById("I").value);

    const Ra = 2; // Armature resistance

    const Iao = I0 - Ish;
    const constantLoss = (V * I0) - (Iao * Iao * Ra);

    const Ia = I + Ish;
    const Pout = V * I;
    const Pin = Pout + constantLoss + (Ia * Ia * Ra);

    const efficiency = (Pout * 100) / Pin;

    document.getElementById("result").innerHTML = `
        <b>Constant Loss:</b> ${constantLoss.toFixed(2)} W<br>
        <b>Input Power:</b> ${Pin.toFixed(2)} W<br>
        <b>Output Power:</b> ${Pout.toFixed(2)} W<br>
        <b>Efficiency:</b> ${efficiency.toFixed(2)} %
    `;
}
</script>

